<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Buttons. -->
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <!-- Progress bar. -->
        <item name="android:progressBarStyle">@style/ProgressBarTheme</item>
    </style>

    <style name="ButtonTheme" parent="android:Widget.Button">
        <item name="android:background">@color/button_background_selector</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProgressBarTheme" parent="android:Widget.ProgressBar">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="ResponseTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>
